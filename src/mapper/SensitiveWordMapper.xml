<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.SensitiveWordMapper">
    <select id="findWord" parameterType="String" resultType="String">
        SELECT * FROM sensitivewords WHERE word = #{word}
    </select>
</mapper>